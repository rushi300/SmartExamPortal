<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet"href="/stylesheets/tempRegisteredExams.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body style="background-color: #1E2E3D;">
    <!-- Navbar begins -->
    <nav class="navbar">
        <span class="navbar-toggle" id="js-navbar-toggle">
            <i class="fas fa-bars"></i>
        </span>
        <a href="/student-home/<%= user._id %>" class="logo">Exam Portal</a>
        <ul class="main-nav" style="margin-top: 10px;font-size: 22px;" id="js-menu">
            <li>
                <a href="/student-home/<%= user._id %>" class="nav-links">Home</a>
            </li>
            <li>
                <a href="/show-registered-organisations" class="nav-links">View Organisation</a>
            </li>
            <li>
                <a href="/logout" class="nav-links">Logout</a>
            </li>
        </ul>
    </nav>
    <!-- Navbar ends -->
    <h2 style="color: #fff;margin-left: 210px;margin-top: 40px;">Live Exams</h2>
    <div class="l-container" style="margin: 0 auto;">
        <!-- single card starts -->
        <% exams.forEach((exam) => { %>
            <% if(exam.isLive) { %>
                <div style="height: 288px;background-image: linear-gradient(120deg, #344457 0%, #344457 100%);">
                    <div style="height: 288px;">
                        <div class="card" style="background-color: transparent;height: 290px;" >
                            <div style="color: #e6dddd;"class="card-body">
                                <h5 class="card-title" style="font-size: 28px;"><%= exam.name %></h5>
                                <br>
                                <h6 class="card-subtitle mb-2 ">Medium is : <%= exam.medium %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Date : <%= exam.date %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Organized By : <%= exam.organizer %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Time Left : 4 days </h6>
                                <form action="/unsubscribe/<%= exam._id %>" method="POST">
                                    <button type ="submit" class="btn " style="background-color: #5d8168d9;color: rgba(255, 255, 255, 0.93);border-radius: 20px;
                                    width: 135px;margin-top: 20px;margin-left: 35px; border-color: #3b5242d9;">Unsubscribe</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }) %>
        <!-- single card ends -->
    </div>
    <h2 style="color: #fff;margin-left: 210px;margin-top: 40px;">Upcoming Exams</h2>
    <div class="l-container" style="margin: 0 auto;">
    <% exams.forEach((exam) => { %>
        <% if(exam.isUpcoming) { %>
            <!-- <a href="/exam/<%= exam._id %>/<%= user._id %> "> -->
                <!-- <a href="/exam/<%= exam._id %>/<%= user._id %> " style="text-decoration: none;color: #fff;" > -->
            <div  style="height: 288px; background-image: linear-gradient(120deg, #344457 0%, #344457 100%);">
                <div style="height: 288px;">
                    <div class="card" style="background-color: transparent;height: 290px;" >
                        <div style="color: #e6dddd; text-align: center;"class="card-body">
                            <a href="/exam/<%= exam._id %>/<%= user._id %> " style="color: #fff;" >
                                <h5 class="card-title" style="font-size: 28px;"><%= exam.name %></h5>
                            </a>
                            <br>
                            <h6 class="card-subtitle mb-2 ">Medium is : <%= exam.medium %></h6>
                            <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Date : <%= exam.date %></h6>
                            <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Organized By : <%= exam.organizer %></h6>
                            <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Time Left : 4 days </h6>
                            <form action="/unsubscribe/<%= exam._id %>" method="POST">
                            <button type ="submit" class="btn " style="background-color: #5d8168d9;color: rgba(255, 255, 255, 0.93);border-radius: 20px;
                            width: 135px;margin: 8px auto; border-color: #3b5242d9;">Unsubscribe</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>    
        <% } %>
    <% }) %>
    </div>
    <h2 style="color: #fff;margin-left: 210px;margin-top: 40px;">Completed Exams</h2>
    <div class="l-container" style="margin: 0 auto;">
        <% exams.forEach((exam) => { %>
            <% if(exam.isCompleted) { %>
                <div  style="height: 250px;background-image: linear-gradient(120deg, #344457 0%, #344457 100%);">
                    <div style="height: 288px;">
                        <div class="card" style="background-color: transparent;height: 290px;" >
                            <div style="color: #e6dddd;"class="card-body">
                                <h5 class="card-title" style="font-size: 28px;"><%= exam.name %></h5>
                                <br>
                                <h6 class="card-subtitle mb-2 ">Medium is : <%= exam.medium %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Date : <%= exam.date %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Organized By : <%= exam.organizer %></h6>
                                <h6 class="card-subtitle mb-2 "style="margin-top:15px;">Time Left : 4 days </h6>
                                
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }) %>
      
  </div>
      
      
</body>
</html>