<body style="background-color: #424242;">
    <!-- <body style="background-color: linear-gradient(260deg, #3e5151 100%, #decba4 100%);"> -->
     <!-- Navbar begins -->
    <nav class="navbar">
        <span class="navbar-toggle" id="js-navbar-toggle">
            <i class="fas fa-bars"></i>
        </span>
        <a href="/student-home/<%=student._id%>" class="logo">Exam Portal</a>
        <ul class="main-nav" style="margin-top: 10px;font-size: 19px;" id="js-menu">
            <li>
                <a href="/<%=student._id%>/myExams" class="nav-links">Registered Exams</a>
            </li>
            <li>
                <a href="/show-registered-organisations" class="nav-links">Registered Organizations</a>
            </li>
            <li>
                <a href="/logout" class="nav-links">Logout</a>
            </li>
        </ul>
    </nav>
  <!-- Navbar ends -->
    <section class="project py-5">
        <div class="container">
            <div class="row my-3">
                <div style="color: #fff;" class="col-10 mx-auto text-center">
                    <h1 class='text-uppercase'>Home Page</h1>
                    
                </div>
            </div>
            <!--  -->
            <div class="row">
                <!-- single project -->
                <% exams.forEach((exam) => { %>
                    <% if (exam.isPublic){ %>

                <div class="col-10 col-md-6 col-lg-4">
                <ol style="text-align: center;" class="articles">
                    <li class="articles__article" style="--animation-order:1"><a class="articles__link">
                            <div style="text-align: center;" class="articles__content articles__content--lhs">
                                <h2 class="articles__title"><%= exam.name %></h2>
                                <p><%= exam.medium %></p>
                                <!-- <p><%=exam.description%> </p> -->
                                <a href="/exam/<%= exam._id %>/<%= student._id %>" class="btn " style="background-color: #696969;color: #fff;">Read More</a>
