                                   <time style="text-align: center;"><%= exam.date %>  </time>
                                </div>
                            </div>
                            <div style="text-align: center;"class="articles__content articles__content--rhs" aria-hidden="true">
                                <h2 class="articles__title"><%= exam.name %></h2>
                                <p><%= exam.medium %></p>
                                <!-- <p><%=exam.description%> </p> -->
                                <a href="/exam/<%= exam._id %>/<%= student._id %>" class="btn " style="background-color: #696969;color: #fff;">Read More</a>
                                <!-- <div style="text-align: center;"class="articles__footer"> -->
                                   <time style="margin-top: 8px;"><%= exam.date %></time>
                                <!-- </div> -->
                            </div>
                        </a></li>
                        
                    </ol> 
                </div>
                <!-- single project ends -->
                <% } %>
                <% }) %>

                <!-- single project -->
                <% student.organisations.forEach((organisation) => { %>
                    <% organisation.exams_conducted.forEach((exam) => { %>
                        <% if (!exam.isPublic){ %>
                            <div class="col-10 col-md-6 col-lg-4">
                            <ol style="text-align: center;" class="articles">
                                <li class="articles__article" style="--animation-order:1"><a class="articles__link">
                                        <div style="text-align: center;" class="articles__content articles__content--lhs">
                                            <h2 class="articles__title"><%= exam.name %></h2>
                                            <p><%= exam.medium %></p>
                                            <!-- <p><%=exam.description%> </p> -->
                                            <a href="/exam/<%= exam._id %>/<%= student._id %>" class="btn " style="background-color: #747c81;color: #fff;">Read More</a>
                                            <div style="text-align: center;" class="articles__footer">
                                               <time style="text-align: center;"><%= exam.date %>  </time>
                                            </div>
                                        </div>
                                        <div style="text-align: center;"class="articles__content articles__content--rhs" aria-hidden="true">
                                            <h2 class="articles__title"><%= exam.name %></h2>
                                            <p><%= exam.medium %></p>
                                            <!-- <p><%=exam.description%> </p> -->
                                            <a href="/exam/<%= exam._id %>/<%= student._id %>" class="btn " style="background-color: #747c81;color: #fff;">Read More</a>
                                            <!-- <div style="text-align: center;"class="articles__footer"> -->
                                               <time style="margin-top: 8px;"><%= exam.date %></time>
                                            <!-- </div> -->
                                        </div>
                                    </a></li>
                                    
                                </ol> 
                            </div>
                    <!-- single project ends -->
                    <% } %>
                    <% }) %>
                    <% }) %>
            </div>
           
        </div>
    </section>

    
